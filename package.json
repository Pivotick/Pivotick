    "@types/d3-zoom": "^3.0.8",
    "@types/lodash.merge": "^4.6.9",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "globals": "^16.2.0",
    "sass": "^1.90.0",
    "typedoc-plugin-markdown": "^4.9.0",
    "typescript": "~5.8.3",
